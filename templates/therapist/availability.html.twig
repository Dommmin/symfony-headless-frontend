{% extends 'base.html.twig' %}

{% block title %}Manage Availability{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold mb-6">Manage Availability</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="card bg-base-200">
                <div class="card-body">
                    <h2 class="card-title">Working Hours</h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="form-control">
                            {{ form_label(form.startHour, 'Start Hour', {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.startHour, {'attr': {'class': 'select select-bordered w-full'}}) }}
                            {{ form_errors(form.startHour) }}
                        </div>

                        <div class="form-control">
                            {{ form_label(form.endHour, 'End Hour', {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.endHour, {'attr': {'class': 'select select-bordered w-full'}}) }}
                            {{ form_errors(form.endHour) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card bg-base-200">
                <div class="card-body">
                    <h2 class="card-title">Excluded Dates</h2>
                    <p class="text-sm text-base-content/70 mb-4">Add dates when you won't be available (holidays, time off, etc.)</p>

                    <div class="form-control">
                        {{ form_label(form.excludedDate, 'Date to Exclude', {'label_attr': {'class': 'label'}}) }}
                        {{ form_widget(form.excludedDate, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.excludedDate) }}
                    </div>

                    {% if excluded_dates|length > 0 %}
                        <div class="mt-4">
                            <h3 class="font-semibold mb-2">Currently Excluded Dates:</h3>
                            <div class="flex flex-wrap gap-2">
                                {% for date in excluded_dates %}
                                    <div class="badge badge-lg">
                                        {{ date|date('Y-m-d') }}
                                        <form method="post" action="{{ path('app_therapist_remove_excluded_date', {'date': date|date('Y-m-d')}) }}" class="inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('remove_excluded_date') }}">
                                            <button type="submit" class="ml-2 hover:text-error">Ã—</button>
                                        </form>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="flex justify-end gap-4">
                <a href="{{ path('app_therapist_calendar') }}" class="btn btn-ghost">View Calendar</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const startTimeInput = document.getElementById('start_time');
    const endTimeInput = document.getElementById('end_time');

    startTimeInput.addEventListener('change', function() {
        const startTime = new Date('2000-01-01T' + this.value);
        const endTime = new Date(startTime.getTime() + 60 * 60 * 1000); // Add 1 hour
        endTimeInput.value = endTime.toTimeString().slice(0, 5);
    });

    // Set default values
    const today = new Date();
    document.getElementById('date').value = today.toISOString().slice(0, 10);
    startTimeInput.value = '10:00';
    endTimeInput.value = '11:00';
});
</script>
{% endblock %} 