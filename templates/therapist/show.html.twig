{% extends 'base.html.twig' %}

{% block title %}{{ therapist.firstName }} {{ therapist.lastName }} - Therapist Profile{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Profile Information -->
            <div class="lg:col-span-2">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h1 class="text-3xl font-bold mb-4">{{ therapist.firstName }} {{ therapist.lastName }}</h1>
                        
                        {% if therapist.location %}
                            <p class="text-base-content/70 mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                {{ therapist.location }}
                            </p>
                        {% endif %}

                        {% if therapist.bio %}
                            <div class="prose max-w-none mb-6">
                                {{ therapist.bio|nl2br }}
                            </div>
                        {% endif %}

                        <div class="divider"></div>

                        <h2 class="text-2xl font-bold mb-4">Availability</h2>
                        <form method="get" class="mb-4 flex flex-wrap gap-2 items-center">
                            <label for="date" class="font-semibold">Choose a date:</label>
                            <input type="date" id="date" name="date" value="{{ date|date('Y-m-d') }}" class="input input-bordered" min="{{ "now"|date('Y-m-d') }}" onchange="this.form.submit()">
                        </form>
                        {% if available_slots is empty %}
                            <div class="alert alert-warning">No available slots for this day.</div>
                        {% else %}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {% for slot in available_slots %}
                                    <div class="card bg-base-200">
                                        <div class="card-body flex flex-col gap-2">
                                            <div class="font-semibold">{{ slot.startHour|date('H:i') }} - {{ slot.endHour|date('H:i') }}</div>
                                            {% if is_granted('ROLE_PATIENT') %}
                                                <form method="post" class="mt-2">
                                                    <input type="hidden" name="slot_id" value="{{ slot.id }}">
                                                    <button type="submit" class="btn btn-primary btn-sm w-full">Book this slot</button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if success %}
                            <div class="alert alert-success mt-4">Appointment booked successfully! You will receive a confirmation email.</div>
                        {% endif %}
                        {% if error %}
                            <div class="alert alert-error mt-4">{{ error }}</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Booking Section -->
            <div class="lg:col-span-1">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title mb-4">Book a Session</h2>
                        {% if not is_granted('ROLE_PATIENT') %}
                            <div class="alert alert-info">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>Please log in as a patient to book a session</span>
                            </div>
                        {% else %}
                            <div class="alert alert-info">Select a date and book an available slot.</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 
