{% extends 'emails/base.html.twig' %}

{% block subject %}Appointment Reminder{% endblock %}

{% block email_body %}
<h1 class="text-2xl font-bold mb-4 text-primary">Appointment Reminder</h1>
<p class="mb-2"><strong>Patient:</strong> {{ appointment.client.fullName }}</p>
<p class="mb-2"><strong>Therapist:</strong> {{ appointment.therapist.fullName }}</p>
<p class="mb-2"><strong>Date:</strong> {{ appointment.startTime|date('Y-m-d') }}</p>
<p class="mb-2"><strong>Time:</strong> {{ appointment.startTime|date('H:i') }} - {{ appointment.endTime|date('H:i') }}</p>
<p class="mb-2"><strong>Status:</strong> {{ appointment.status.value|title }}</p>
{% if appointment.therapist.location %}
    <p class="mb-2"><strong>Location:</strong> {{ appointment.therapist.location }}</p>
{% endif %}
{% if appointment.notes %}
    <p class="mb-2"><strong>Notes:</strong> {{ appointment.notes }}</p>
{% endif %}
<p class="mt-6 text-base-content/70">Please arrive on time. If you need to cancel, do so at least 24 hours in advance.</p>
{% endblock %} 