{% extends 'app/layout.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6">Settings</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-6'} }) }}
        <div class="card bg-base-200">
            <div class="card-body">
                <h2 class="card-title">Profile Settings</h2>

                <div class="flex flex-col md:flex-row gap-4">
                    <div class="form-control w-full">
                        {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'label'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                    <div class="form-control w-full">
                        {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'label'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                </div>
                <div class="form-control w-full">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'input input-bordered w-full'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-control">
                    {{ form_label(form.phone, 'Phone', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'input input-bordered w-full'}}) }}
                    {{ form_errors(form.phone) }}
                </div>
                <div class="form-control">
                    {{ form_label(form.avatarFile, 'Avatar', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.avatarFile) }}
                    {{ form_errors(form.avatarFile) }}
                </div>
            </div>
        </div>

        {% if is_granted('ROLE_THERAPIST') %}
        <div class="card bg-base-200">
            <div class="card-body">
                <h2 class="card-title">Professional Settings</h2>

                <div class="form-control">
                    {{ form_label(form.hourlyRate, 'Hourly Rate', {'label_attr': {'class': 'label'}}) }}
                    <div class="join">
                        <span class="join-item btn btn-disabled">$</span>
                        {{ form_widget(form.hourlyRate, {'attr': {'class': 'input input-bordered join-item w-full'}}) }}
                    </div>
                    {{ form_errors(form.hourlyRate) }}
                </div>

                <div class="form-control">
                    {{ form_label(form.bio, 'Bio', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.bio, {'attr': {'class': 'textarea textarea-bordered w-full', 'rows': 4}}) }}
                    {{ form_errors(form.bio) }}
                </div>
            </div>
        </div>
        {% endif %}

        {% if is_granted('ROLE_THERAPIST') %}
        <div class="card bg-base-200">
            <div class="card-body">
                <div class="form-control">
                    {{ form_label(form.location, 'Location', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.location, {'attr': {'class': 'input input-bordered w-full', 'id': 'location-input'}}) }}
                    {{ form_errors(form.location) }}
                </div>
                <div id="map" style="height: 300px; margin-top: 1rem;"></div>
                {{ form_widget(form.latitude) }}
                {{ form_widget(form.longitude) }}
            </div>
        </div>
        {% endif %}

        <div class="flex justify-end gap-4">
            <a href="{{ path('app_home') }}" class="btn btn-ghost">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var lat = parseFloat(document.getElementById('profile_form_latitude').value) || 52.2297;
            var lng = parseFloat(document.getElementById('profile_form_longitude').value) || 21.0122;
            var map = L.map('map').setView([lat, lng], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: 'Â© OpenStreetMap'
            }).addTo(map);
            var marker = L.marker([lat, lng], {draggable:true}).addTo(map);
            marker.on('dragend', function(e) {
                var position = marker.getLatLng();
                document.getElementById('profile_form_latitude').value = position.lat;
                document.getElementById('profile_form_longitude').value = position.lng;
            });
            map.on('click', function(e) {
                marker.setLatLng(e.latlng);
                document.getElementById('profile_form_latitude').value = e.latlng.lat;
                document.getElementById('profile_form_longitude').value = e.latlng.lng;
            });
        });
    </script>
{% endblock %}
