{% extends 'panel/base.html.twig' %}

{% block title %}Appointment Details{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Appointment Details</h1>
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <div class="mb-4">
                <span class="font-semibold">Therapist:</span>
                {{ appointment.therapist.firstName }} {{ appointment.therapist.lastName }}
            </div>
            <div class="mb-4">
                <span class="font-semibold">Patient:</span>
                {{ appointment.client.firstName }} {{ appointment.client.lastName }}
            </div>
            <div class="mb-4">
                <span class="font-semibold">Date:</span>
                {{ appointment.startTime|date('Y-m-d') }}
            </div>
            <div class="mb-4">
                <span class="font-semibold">Time:</span>
                {{ appointment.startTime|date('H:i') }} - {{ appointment.endTime|date('H:i') }}
            </div>
            <div class="mb-4">
                <span class="font-semibold">Status:</span>
                <span class="badge badge-{{ appointment.status == 'confirmed' ? 'success' : (appointment.status == 'pending' ? 'warning' : 'error') }}">
                    {{ appointment.status|title }}
                </span>
            </div>
            {% if appointment.notes %}
                <div class="mb-4">
                    <span class="font-semibold">Notes:</span>
                    <div class="prose">{{ appointment.notes }}</div>
                </div>
            {% endif %}
            <div class="flex justify-end">
                <a href="{{ path('panel_appointment_index') }}" class="btn btn-ghost">Back to Appointments</a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 